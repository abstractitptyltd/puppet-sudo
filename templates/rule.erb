if @commands.class == Array
    tmp = []
    tmp_last = []
    @commands.each do |item|
        if item == "ALL"
            tmp.unshift(item)
        elsif item.start_with?("!")
            tmp_last.push(item)
        else
            tmp.push(item)
        end
    end
    tmp += tmp_last
    @commands = tmp
end
